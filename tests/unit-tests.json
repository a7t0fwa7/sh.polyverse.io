			"! -z \"$(cat $STDOUT | grep ^VERSION_ID=)\"",
			"! -z \"$(cat $STDOUT | grep ^ARCH=$PV_X_ARCH)\"",
			"! -z \"$(cat $STDOUT | grep ^PACKAGE_MANAGER=$PV_X_PACKAGE_MANAGER)\"",
			"$EXIT -eq 0"
		]
